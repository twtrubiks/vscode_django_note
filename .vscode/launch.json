    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django launch",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver",
                "--noreload",
                // "--nothreading"
            ],
            "django": true,
            "justMyCode": false,
        },
        {
            "name": "Django attach",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 18000
            },
            "django": true,
            "justMyCode": false,
        },
        {
            "name": "Python:Django Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "test",
                // "mucics/",
            ],
            "django": true,
            "justMyCode": false,
        }
    ]
}